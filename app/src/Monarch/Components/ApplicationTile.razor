@*
Conner Hammonds
Monarch Application Tile Component
 - Displays individual application status tiles
 - Expandable to show more details
*@

@using Monarch.Models
@using Monarch.Services
@inject AppCreationService Service

<div class="app-tile @GetStatusClass() @(IsExpanded ? "expanded" : string.Empty)">
    <div class="tile-header">
        <span class="app-name">@App.AppName</span>
        <div class="status-indicator">
            <span class="status-dot"></span>
            <button class="expand-btn" title="Expand" aria-label="Expand" aria-expanded="@IsExpanded"
                @onclick="ExpandAsync">
                <svg class="expand-icon" viewBox="0 0 24 24" width="16" height="16" aria-hidden="true">
                    <path fill="currentColor"
                        d="M7 3H3v4h2V5h2V3zm12 0h-4v2h2v2h2V3zM5 17H3v4h4v-2H5v-2zm14 0h-2v2h-2v2h4v-4z" />
                </svg>
            </button>
        </div>
    </div>

    @if (IsExpanded)
    {
        <div class="details">
            @if (isLoadingDetails)
            {
                <div class="loading-state">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Loading live metrics...
                </div>
            }
            else if (details != null)
            {
                <div class="metrics">
                    
                    <div class="metric">
                        <span class="label">Latency</span>
                        <span class="value">
                            @(details.nrLatency > 0 ? $"{details.nrLatency} ms" : details.latency)
                        </span>
                        
                        <div class="bar">
                            @{
                                var latencyPct = Math.Min(details.nrLatency / 10, 100); 
                                var colorClass = details.nrLatency > 500 ? "red" : (details.nrLatency > 200 ? "yellow" : "green");
                            }
                            <div class="fill @colorClass" style="width: @latencyPct%"></div>
                        </div>
                    </div>

                    <div class="metric">
                        <span class="label">CPU Usage</span>
                        <span class="value">@details.nrCpuUsage.ToString("0.0")%</span>
                        <div class="bar">
                            <div class="fill @(details.nrCpuUsage > 80 ? "red" : "blue")" 
                                 style="width: @Math.Min(details.nrCpuUsage, 100)%"></div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(details.output))
                    {
                        <div class="metric-row">
                            <span class="label">Nagios Output</span>
                            <span class="value small text-truncate" title="@details.output">
                                @details.output
                            </span>
                        </div>
                    }

                    <div class="metric-row mt-2">
                        <span class="label">Last Checked</span>
                        <span class="muted">
                            @GetTimeAgo(details.nrLastCheck > details.lastCheck ? details.nrLastCheck : details.lastCheck)
                        </span>
                    </div>
                </div>
            }
            else
            {
                <p class="text-muted p-3">No live data available.</p>
            }
        </div>
    }
</div>

@code 
{
    [Parameter]
    public AppModel App { get; set; } = default!;

    [Parameter]
    public EventCallback<AppModel> OnExpand { get; set; }

    private bool IsExpanded { get; set; }

    // New fields for data fetching
    private bool isLoadingDetails = false;
    private AppDetails? details;

    private async Task ExpandAsync()
    {
        IsExpanded = !IsExpanded;

        // NEW: Lazy Load Logic
        if (IsExpanded && details == null)
        {
            isLoadingDetails = true;
            try
            {
                details = await Service.GetDetailsAsync(App);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error loading details: {ex.Message}");
            }
            finally
            {
                isLoadingDetails = false;
            }
        }

        if (OnExpand.HasDelegate)
        {
            await OnExpand.InvokeAsync(App);
        }
    }

    private string GetStatusClass() => App.Status switch
    {
        StatusType.Operational => "status-operational",
        StatusType.DegradedPerformance => "status-degraded",
        StatusType.Outage => "status-outage",
        _ => "status-unknown"
    };

    private string GetTimeAgo(DateTime dt)
    {
        if (dt <= DateTime.MinValue) return "Never";
        var span = DateTime.Now - dt;
        if (span.TotalMinutes < 1) return "Just now";
        if (span.TotalMinutes < 60) return $"{(int)span.TotalMinutes}m ago";
        if (span.TotalHours < 24) return $"{(int)span.TotalHours}h ago";
        return dt.ToString("MMM dd");
    }
}


<style>
    .app-tile {
        background-color: #3D3D3D;
        border-radius: 8px;
        padding: 12px 16px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        color: white;
    }

    .tile-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .app-tile:hover {
        background-color: #4D4D4D;
    }

    .status-indicator {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .status-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .expand-btn {
        background: transparent;
        border: none;
        color: #ffffff;
        opacity: 0.75;
        padding: 4px;
        border-radius: 4px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .expand-btn:hover {
        opacity: 1;
        background-color: rgba(255, 255, 255, 0.08);
        transform: scale(1.1);
    }

    .expand-icon {
        display: block;
        transition: transform 0.3s ease;
    }

    .expanded .expand-icon {
        transform: rotate(45deg);
    }

    /* Details section */
    .app-tile {
        transition: all 0.3s ease-in-out;
    }

    .app-tile.expanded {
        padding-bottom: 16px;
    }

    .details {
        margin-top: 12px;
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 8px;
        padding: 12px;
        width: 100%;
        animation: slideDown 0.3s ease-out;
        transform-origin: top;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: scaleY(0);
            max-height: 0;
        }

        to {
            opacity: 1;
            transform: scaleY(1);
            max-height: 500px;
        }
    }

    .metrics {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px 16px;
    }

    .metric,
    .metric-row {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .metric .label,
    .metric-row .label {
        font-size: 12px;
        color: #BDBDBD;
    }

    .metric .value {
        font-size: 13px;
        color: #FFFFFF;
        font-weight: 600;
    }

    .muted {
        color: #CCCCCC;
        font-size: 13px;
    }

    .bar {
        height: 6px;
        border-radius: 4px;
        background: rgba(255, 255, 255, 0.12);
        overflow: hidden;
    }

    .bar .fill {
        height: 100%;
        background: #4CAF50;
        /* green */
    }

    .bar .fill.yellow {
        background: #FFC107;
    }

    .bar .fill.red {
        background: #F44336;
    }

    .status-operational .status-dot {
        background-color: #4CAF50;
    }

    .status-degraded .status-dot {
        background-color: #FFC107;
    }

    .status-outage .status-dot {
        background-color: #F44336;
    }

    .status-unknown .status-dot {
        background-color: #9E9E9E;
    }
</style>